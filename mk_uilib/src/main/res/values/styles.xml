<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="icon_style">
        <item name="android:layout_width">@dimen/icon_height</item>
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:layout_marginTop">@dimen/icon_margin</item>
        <item name="android:layout_marginBottom">@dimen/icon_margin</item>
        <item name="android:layout_marginRight">@dimen/icon_margin</item>
        <item name="android:contentDescription">null</item>
        <item name="android:button">@null</item>
    </style>
    
    <style name="progressbar_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <style name="tag_text_blue">
        <item name="android:textColor">@color/tagTextBlue</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="gallery_tab">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_gallery_txt</item>
        <item name="android:background">@drawable/selector_gallery_tab</item>
        <item name="android:padding">10dp</item>
        <item name="android:button">@null</item>
    </style>
</resources>
