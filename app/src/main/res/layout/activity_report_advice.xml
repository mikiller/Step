<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/cancel_btn_bg">

    <com.westepper.step.customViews.TitleBar
        xmlns:bar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:backStyle="ARROW"
        bar:subStyle="TXT"/>
    
    <RelativeLayout
        android:id="@+id/rl_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />

        <EditText
            android:id="@+id/edt_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的意见"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="15dp"
            android:maxLength="140"
            android:gravity="top"
            android:minLines="7"/>

        <TextView
            android:id="@+id/tv_adviceNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_advice"
            android:layout_alignRight="@+id/edt_advice"
            android:layout_margin="15dp"
            android:text="140"
            android:textSize="13sp"
            android:textColor="@color/discovery_kind_unchecked"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/titleBar">

        <RadioGroup
            android:id="@+id/rdg_reasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <RadioButton
                android:id="@+id/rdb1"
                style="@style/rdb_report"
                android:text="广告营销" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:button="@null"
                android:enabled="false"/>

            <RadioButton
                android:id="@+id/rdb2"
                style="@style/rdb_report"
                android:text="淫秽色情" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:button="@null"
                android:enabled="false"/>

            <RadioButton
                android:id="@+id/rdb3"
                style="@style/rdb_report"
                android:text="不友善行为" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:layout_margin="15dp"
                    android:textColor="@color/text_color_black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edt_reason"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="请输入理由"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/selector_track_more"
            android:textColor="@android:color/white"
            android:text="提交" />
    </LinearLayout>
</RelativeLayout>