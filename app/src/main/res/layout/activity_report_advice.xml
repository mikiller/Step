<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/cancel_btn_bg">

    <com.westepper.step.customViews.TitleBar
        xmlns:bar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:backStyle="ARROW"
        bar:subStyle="TXT"/>
    
    <RelativeLayout
        android:id="@+id/rl_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />

        <EditText
            android:id="@+id/edt_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的意见"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="15dp"
            android:maxLength="140"
            android:gravity="top"
            android:minLines="7"/>

        <TextView
            android:id="@+id/tv_adviceNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_advice"
            android:layout_alignRight="@+id/edt_advice"
            android:layout_margin="15dp"
            android:text="140"
            android:textSize="13sp"
            android:textColor="@color/discovery_kind_unchecked"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/titleBar">

        <RadioGroup
            android:id="@+id/rdg_reasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="广告营销"
                android:textSize="15sp"
                android:textColor="@color/text_color_black"
                android:button="@null"
                android:padding="15dp"
                android:drawableRight="@drawable/selector_rdb_reason" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="淫秽色情"
                android:textSize="15sp"
                android:textColor="@color/text_color_black"
                android:button="@null"
                android:padding="15dp"
                android:drawableRight="@drawable/selector_rdb_reason"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="不友善行为"
                android:textSize="15sp"
                android:textColor="@color/text_color_black"
                android:button="@null"
                android:padding="15dp"
                android:drawableRight="@drawable/selector_rdb_reason"/>
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>