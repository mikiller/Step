<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackPrimary"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.uilib.joooonho.SelectableRoundedImageView xmlns:siv="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            siv:sriv_left_bottom_corner_radius="7dp"
            siv:sriv_left_top_corner_radius="7dp"
            siv:sriv_right_bottom_corner_radius="7dp"
            siv:sriv_right_top_corner_radius="7dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_label" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="0.8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="@color/splash_label" />

        <TextView
            style="@style/hint_text_style2"
            android:layout_margin="10dp"
            android:text="你的城市记忆"
            android:textColor="@color/splash_label" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="@color/splash_label" />
    </LinearLayout>
</LinearLayout>