<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cancel_btn_bg">

    <com.westepper.step.customViews.TitleBar
        xmlns:bar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:backStyle="FORK"
        bar:subStyle="TXT"
        bar:subTxt="发布"
        bar:titleTxt="新心情"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="15dp">

        <EditText
            android:id="@+id/edt_msg"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:textColorHint="@color/line_gray"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="98dp"
            android:layout_below="@+id/edt_msg"/>

        <TextView
            android:id="@+id/tv_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcv_photo"
            android:textSize="12sp"
            android:textColor="@color/discovery_kind_unchecked"
            android:drawableLeft="@mipmap/ic_city2"
            android:drawablePadding="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_goParam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <com.westepper.step.customViews.MyMenuItem
            xmlns:menu="http://schemas.android.com/apk/res-auto"
            android:id="@+id/menu_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            menu:menuIcon="@mipmap/ic_go_people"
            menu:menuTitle="邀约人数"
            menu:needNext="true"
            menu:needSubText="true"/>

        <com.westepper.step.customViews.MyMenuItem
            xmlns:menu="http://schemas.android.com/apk/res-auto"
            android:id="@+id/menu_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            menu:menuIcon="@mipmap/ic_go_date"
            menu:menuTitle="邀约时间"
            menu:needNext="true"
            menu:needSubText="true"/>
    </LinearLayout>
</LinearLayout>