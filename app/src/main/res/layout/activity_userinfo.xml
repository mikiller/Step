<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:menu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray">

    <com.westepper.step.customViews.TitleBar
        xmlns:bar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:titleTxt="个人资料"
        bar:subTxt="保存"
        bar:subStyle="TXT"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:textSize="16sp"
            android:text="头像"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <com.uilib.joooonho.SelectableRoundedImageView
            xmlns:srv="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_header"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/ic_default_head"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_next"
            android:layout_centerVertical="true"
            srv:sriv_oval="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/iv_header"/>
    </RelativeLayout>

    <com.westepper.step.customViews.MyMenuItem
    android:id="@+id/menu_nickname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    menu:menuTitle="昵     称"
    menu:needSubText="true"
    menu:needNext="true"/>

    <com.westepper.step.customViews.MyMenuItem
        android:id="@+id/menu_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        menu:menuTitle="Step ID"
        menu:needSubText="true"
        menu:needNext="true"/>

    <com.westepper.step.customViews.MyMenuItem
        android:id="@+id/menu_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        menu:menuTitle="性     别"
        menu:needSubText="true"/>

    <com.westepper.step.customViews.MyMenuItem
        android:id="@+id/menu_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        menu:menuTitle="所在城市"
        menu:needSubText="true"
        menu:needNext="true"/>

    <RelativeLayout
        android:id="@+id/rl_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_title_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textSize="16sp"
            android:textColor="@color/text_color_black"
            android:layout_margin="15dp"/>

        <View
            android:id="@id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_below="@+id/tv_title_sign"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/edt_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:hint="请输入您的意见"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="15dp"
            android:maxLength="140"
            android:gravity="top"
            android:minLines="7"/>

        <TextView
            android:id="@+id/tv_adviceNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_sign"
            android:layout_alignRight="@+id/edt_sign"
            android:layout_margin="15dp"
            android:text="140"
            android:textSize="13sp"
            android:textColor="@color/discovery_kind_unchecked"/>
    </RelativeLayout>
</LinearLayout>