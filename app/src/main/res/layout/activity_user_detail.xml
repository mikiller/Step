<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:menu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/cancel_btn_bg">

    <com.westepper.step.customViews.TitleBar
        xmlns:bar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bar:titleTxt=" "
        bar:subStyle="IMG"
        bar:titleBgColor="@android:color/transparent"/>

    <com.westepper.step.customViews.UserInfoLayout
        xmlns:usr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        usr:canEdit="false"
        usr:needOpt="false"
        usr:needGoSession="true" />

    <com.uilib.mxmenuitem.MyMenuItem
        android:id="@+id/menu_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userLayout"
        menu:menuTitle="心情"
        menu:needNext="true" />

    <com.uilib.mxmenuitem.MyMenuItem
        android:id="@+id/menu_outGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_mood"
        menu:menuTitle="约行"
        menu:needNext="true"
        menu:needLine="false"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/menu_outGo"
        android:background="@color/white">

        <com.uilib.mxprogressbar.MXCircleProgressBar
            android:id="@+id/pgs1"
            menu:startPos="90"
            menu:borderWidth="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp" />

        <com.uilib.mxprogressbar.MXCircleProgressBar
            android:id="@+id/pgs2"
            menu:startPos="90"
            menu:borderWidth="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp" />
    </LinearLayout>
</RelativeLayout>